<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <RelativeLayout
                android:id="@+id/home_search_rectangle_layout"
                android:layout_width="match_parent"
                android:layout_height="78dp"
                android:background="@drawable/service_search_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <TextView
                    android:id="@+id/place"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Service name"
                    android:textAppearance="@style/place"
                    android:textSize="20sp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="8dp"
                android:background="@color/white"
                android:layout_margin="16dp">

                <!-- Tekstualni sadrÅ¾aj -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="@drawable/rounded_corners_white">

                    <!-- Naziv i Kategorija -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/serviceName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_bold"
                            android:text="Service Name"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:paddingRight="20dp" />

                        <TextView
                            android:id="@+id/serviceCategory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Category"
                            android:paddingRight="20dp"
                            android:textColor="@color/light_purple"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_medium" />
                    </LinearLayout>

                    <!-- Dodatni sloj - dostupnost -->
                    <FrameLayout
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:background="@color/white">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:layout_gravity="bottom"
                            android:background="@drawable/rounded_corners_image_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingLeft="30dp"
                            android:paddingRight="30dp">

                            <TextView
                                android:id="@+id/typeOfEvent"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="type"
                                android:textColor="#FFFFFF"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>

                <!-- Slika pored -->
                <ImageView
                    android:id="@+id/favourite"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/favourite"
                    android:layout_marginStart="16dp"
                    android:contentDescription="Service Icon"
                    android:clickable="true"
                    android:onClick="onServiceImageClick" />
            </LinearLayout>
            <TextView
                android:id="@+id/description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:text="@string/description_service"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />

            <TextView
                android:id="@+id/specifics"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:text="@string/specification_service"
                android:textColor="#000000"
                android:textSize="14sp"
                android:fontFamily="@font/poppins_regular" />

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Slika 1 -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pastry"
                        android:background="@drawable/rounded_corners_white" />

                    <!-- Slika 2 -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:layout_marginEnd="8dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pastry"
                        android:background="@drawable/rounded_corners_white" />

                    <!-- Slika 3 -->
                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="150dp"
                        android:scaleType="centerCrop"
                        android:src="@drawable/pastry"
                        android:background="@drawable/rounded_corners_white" />

                </LinearLayout>
            </HorizontalScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="16dp"
                android:gravity="end"> <!-- Postavlja sve elemente na desnu stranu -->

                <!-- Cena sa popustom -->
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp">
                    <!-- Nova cena -->
                    <TextView
                        android:id="@+id/newPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30dp"
                        android:layout_marginRight="90dp"
                        android:layout_gravity="end"
                        android:text="8$/hr"
                        android:textColor="@color/light_purple"
                        android:textSize="20sp"
                        android:fontFamily="@font/poppins_bold"
                        android:layout_alignParentEnd="true"/>

                    <LinearLayout
                        android:id="@+id/oldPriceContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/rounded_corners_gray"
                        android:padding="8dp"
                        android:layout_marginTop="15dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginRight="10dp">

                        <TextView
                            android:id="@+id/oldPrice"
                            android:layout_width="60dp"
                            android:layout_height="50dp"
                            android:text="10$/hr"
                            android:textColor="#000000"
                            android:textSize="18sp"
                            android:fontFamily="@font/poppins_regular"
                            android:paintFlags="strike_thru_text"
                            android:gravity="center" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/discountBadge"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/rounded_rectangle_purple"
                        android:padding="4dp"
                        android:text="10%"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/poppins_regular"
                        android:gravity="center" />

                    <!-- Kvadrat sa starom cenom -->


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:padding="16dp">

                <!-- LjubiÄasto dugme - View Comments & Reviews -->
                <Button
                    android:id="@+id/btn_view_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_corners_light_blue"
                    android:text="@string/view_comments_and_reviews"
                    android:textColor="@android:color/white"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold" />

                <!-- LjubiÄasto dugme - Buy Product -->
                <Button
                    android:id="@+id/btn_buy_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_corners_8599e0"
                    android:text="Buy Product"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold" />
                <TextView
                    android:id="@+id/product_not_available"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:padding="16dp"
                    android:background="@drawable/broken_border"
                    android:text="Product not available at the moment"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_medium"
                    android:textStyle="bold"
                    android:gravity="center" />

            </LinearLayout>

            <!-- LinearLayout za dva siva dugmeta -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:gravity="end"
                android:paddingHorizontal="16dp">

                <!-- Sivo dugme - Provider Info -->

                <!-- Sivo dugme - Company Info -->
                <Button
                    android:id="@+id/btn_provider_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_e8e8e8"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Provider Info"
                    android:textColor="@android:color/black"
                    android:textSize="12sp" />

                <Button
                    android:id="@+id/btn_company_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/rounded_corners_e8e8e8"
                    android:text="Company Info"
                    android:textColor="@android:color/black"
                    android:textSize="12sp"
                    android:fontFamily="@font/poppins_medium" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
                android:background="#FFFFFF">

                <!-- Text za komentare i recenzije -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/comments_and_reviews"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginTop="30dp"
                    />

                <!-- Prvi komentar i recenzija -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corners_dark_gray"
                    android:layout_marginBottom="8dp">

                    <!-- Slika korisnika -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile_picture"
                        android:contentDescription="User Profile Image"
                        android:layout_marginEnd="12dp"
                        android:circleCrop="true"/>

                    <!-- Tekst komentara -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Ime korisnika -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Josh"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"/>

                        <!-- Rating u zvezdama -->
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="3.5"
                            android:stepSize="0.5"
                            android:layout_marginTop="4dp"
                            android:isIndicator="true"
                            android:progressTint="@color/purple"/>

                        <!-- Komentar -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Drugi komentar i recenzija -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="8dp"
                    android:background="@drawable/rounded_corners_dark_gray">

                    <!-- Slika korisnika -->
                    <ImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/profile_picture"
                        android:contentDescription="User Profile Image"
                        android:layout_marginEnd="12dp"
                        android:circleCrop="true"/>

                    <!-- Tekst komentara -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <!-- Ime korisnika -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Josh"
                            android:textSize="16sp"
                            android:textColor="#000000"
                            android:fontFamily="@font/poppins_bold"
                            android:textStyle="bold"/>

                        <!-- Rating u zvezdama -->
                        <RatingBar
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="5"
                            android:rating="2.5"
                            android:stepSize="0.5"
                            android:layout_marginTop="4dp"
                            android:isIndicator="true"
                            android:progressTint="@color/purple"/>

                        <!-- Komentar -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed do eiusmod tempor incididunt ut labore et dolore magna aliqua."
                            android:textColor="#000000"
                            android:textSize="14sp"
                            android:fontFamily="@font/poppins_regular"
                            android:layout_marginTop="8dp" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</FrameLayout>
