<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".RegistrationActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_extrabold"
            android:text="@string/are_you"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="150dp"
                android:text="@string/here_to_plan"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ToggleButton
                    android:id="@+id/organizerButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/slider_organizer_provider"
                    android:textAlignment="center"
                    android:enabled="true"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="10dp"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:textOn="@string/prompt_organizer"
                    android:textOff="@string/prompt_organizer"
                    android:textColor="@drawable/text_organizer_provider"
                    android:textSize="16sp"/>
                <ToggleButton
                    android:id="@+id/providerButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slider_organizer_provider"
                    android:enabled="true"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textOn="@string/prompt_provider"
                    android:textOff="@string/prompt_provider"
                    android:textColor="@drawable/text_organizer_provider"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="70dp"
                android:gravity="end"
                android:text="@string/or_bring_the"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>