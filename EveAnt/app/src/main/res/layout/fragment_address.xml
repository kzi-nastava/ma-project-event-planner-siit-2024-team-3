<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    android:padding="16dp"
    tools:context=".user.registration.RegistrationActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_extrabold"
                android:text="@string/where_can_we_reach_you"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/location"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"/>
                <EditText
                    android:id="@+id/country"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_country"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/location"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"/>
                <EditText
                    android:id="@+id/city"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_city"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/location"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"/>
                <EditText
                    android:id="@+id/street"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_street"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/location"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"/>
                <EditText
                    android:id="@+id/house"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_house"
                    android:inputType="text"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/location"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="start|center_vertical"/>
                <EditText
                    android:id="@+id/postalNumber"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_postal_number"
                    android:inputType="number"/>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
