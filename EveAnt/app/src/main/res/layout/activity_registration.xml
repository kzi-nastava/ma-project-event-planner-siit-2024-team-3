<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="100dp"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="100dp"
    tools:context=".user.registration.RegistrationActivity">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corners_white"
        android:padding="16dp">

        <LinearLayout
            android:id="@+id/progress_registration"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">
            <Button
                android:id="@+id/goToBack"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_corners_e8e8e8"
                android:backgroundTint="@null"
                android:enabled="true"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:layout_marginBottom="80dp"
                android:text="@string/action_back"
                android:textAlignment="center"
                android:layout_marginEnd="5dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <Button
                android:id="@+id/goToNext"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:background="@drawable/rounded_corners_8599e0"
                android:enabled="true"
                android:fontFamily="@font/poppins_bold"
                android:padding="10dp"
                android:text="@string/action_next"
                android:layout_marginBottom="80dp"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="16sp" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/firstHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom">
            <TextView
                android:id="@+id/ellipse_1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="1"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/rounded_corners_8599e0"/>
            <View
                android:id="@+id/line_46"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
            <TextView
                android:id="@+id/ellipse_2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="2"
                android:gravity="center"
                android:textColor="@color/black" />
            <View
                android:id="@+id/line_47"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
            <TextView
                android:id="@+id/ellipse_3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="3"
                android:gravity="center"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/line_48"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
            <TextView
                android:id="@+id/ellipse_4"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="4"
                android:gravity="center"
                android:textColor="@color/black"/>
            <View
                android:id="@+id/line_49"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/secondHalf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="bottom">
            <View
                android:id="@+id/line_50"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
            <TextView
                android:id="@+id/ellipse_6"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="5"
                android:gravity="center"
                android:textColor="@color/black" />
            <View
                android:id="@+id/line_51"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />
            <TextView
                android:id="@+id/ellipse_7"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:text="6"
                android:gravity="center"
                android:textColor="@color/black"/>

            <View
                android:id="@+id/line_52"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="2dp"
                android:background="@drawable/line_black" />

        </LinearLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>