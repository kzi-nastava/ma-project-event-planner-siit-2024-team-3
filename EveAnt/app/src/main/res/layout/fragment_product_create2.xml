<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductCreateFragment2">
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="@drawable/rounded_corners_white"
        android:padding="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_extrabold"
                android:text="@string/create_service"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/previous_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Previous" />
            </LinearLayout>
            <!--trajanjee-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="16dp"
                android:background="@drawable/rounded_background_gray"
                >

                <!-- Klikabilan deo za Duration -->
                <LinearLayout
                    android:id="@+id/layoutDuration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_unselected"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="Duration"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="viewStart"/>
                        <EditText
                            android:id="@+id/durationHours"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="@string/h"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>


                        <EditText
                            android:id="@+id/durationMinutes"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="@string/min"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>

                <!-- Klikabilan deo za Range -->
                <LinearLayout
                    android:id="@+id/layoutRange"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/background_unselected"
                    android:orientation="vertical"
                    android:padding="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="Min duration"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="viewStart"/>
                        <EditText
                            android:id="@+id/minHours"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="@string/h"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>

                        <EditText
                            android:id="@+id/minMinutes"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:layout_height="match_parent"
                            android:hint="@string/min"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="8dp">
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:text="Max duration"
                            android:textStyle="bold"
                            android:textSize="14sp"
                            android:textAlignment="viewStart"/>
                        <EditText
                            android:id="@+id/maxHours"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:hint="@string/h"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>

                        <EditText
                            android:id="@+id/maxMinutes"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:inputType="number"
                            android:layout_height="match_parent"
                            android:hint="@string/min"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:textSize="14sp"
                            android:textAlignment="center"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <!--kraj trajanja-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">

                <EditText
                    android:id="@+id/deadline"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_reservation_deadline"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:background="@drawable/rounded_corners_f0f3ff">

                <EditText
                    android:id="@+id/cacnellationPeriod"
                    style="@style/loginInputText"
                    android:hint="@string/prompt_cancellation_period"
                    android:imeActionLabel="@string/action_sign_in_short"
                    android:imeOptions="actionDone"
                    android:inputType="textPersonName"
                    android:selectAllOnFocus="true"/>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:text="@string/conformation"
                android:textColor="@color/black"
                android:fontFamily="@font/poppins_regular"
                android:textSize="16sp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:elevation="2dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ToggleButton
                    android:id="@+id/automaticButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/slider_organizer_provider"
                    android:textAlignment="center"
                    android:enabled="true"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="10dp"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:textOn="@string/prompt_automatic"
                    android:textOff="@string/prompt_automatic"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintVertical_bias="0.2" />
                <ToggleButton
                    android:id="@+id/manualButton"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/slider_organizer_provider"
                    android:enabled="true"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textOn="@string/prompt_manual"
                    android:textOff="@string/prompt_manual"
                    android:textColor="@color/black"
                    android:textSize="14sp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/photos_button"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="@string/photos"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <Button
                    android:id="@+id/save_button"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Save"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <EditText
                    android:id="@+id/page2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:layout_marginTop="20dp"
                    tools:ignore="MissingConstraints" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>


