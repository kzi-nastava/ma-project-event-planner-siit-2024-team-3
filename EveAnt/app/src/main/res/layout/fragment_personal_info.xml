 <FrameLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
     xmlns:tools="http://schemas.android.com/tools"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:layout_margin="16dp"
     android:padding="16dp"
     tools:context=".user.registration.PersonalInfoFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/poppins_extrabold"
            android:text="@string/tell_us_more"
            android:textAlignment="center"
            android:textSize="30sp"
            android:textColor="@color/black"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corners_f0f3ff">

            <EditText
                android:id="@+id/name"
                style="@style/loginInputText"
                android:hint="@string/prompt_name"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="textPersonName"
                android:selectAllOnFocus="true"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_f0f3ff">

            <EditText
                android:id="@+id/surname"
                style="@style/loginInputText"
                android:hint="@string/prompt_surname"
                android:imeActionLabel="@string/action_sign_in_short"
                android:imeOptions="actionDone"
                android:inputType="text" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/rounded_corners_f0f3ff"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:layout_marginStart="16dp"
                android:background="@drawable/telephone" />

            <EditText
                android:id="@+id/phoneNumber"
                style="@style/loginInputText"
                android:hint="@string/prompt_phoneNumber"
                android:inputType="text|phone" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp"

            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="5dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="4dp"
                android:background="@drawable/rounded_corners_f0f3ff"
                android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="0dp"
                        android:background="@drawable/ic_calendar" />

                <Spinner
                    android:id="@+id/spinner_day"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinner_month"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:spinnerMode="dropdown" />

                <Spinner
                    android:id="@+id/spinner_year"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:spinnerMode="dropdown" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:elevation="0dp"
                android:layout_marginStart="4dp"
                android:background="@drawable/rounded_corners_f0f3ff">
                <ToggleButton
                    android:id="@+id/male"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:background="@drawable/slider_organizer_provider"
                    android:enabled="true"
                    android:fontFamily="@font/poppins_bold"
                    android:padding="10dp"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:textOn="@string/male"
                    android:textOff="@string/male"
                    android:textColor="@drawable/text_organizer_provider"
                    android:textSize="16sp"/>
                <ToggleButton
                    android:id="@+id/female"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:background="@drawable/slider_organizer_provider"
                    android:enabled="true"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textOn="@string/female"
                    android:textOff="@string/female"
                    android:textColor="@drawable/text_organizer_provider"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"/>
                <ToggleButton
                    android:id="@+id/other"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp"
                    android:background="@drawable/slider_organizer_provider"
                    android:enabled="true"
                    android:shadowColor="@null"
                    android:stateListAnimator="@null"
                    android:elevation="0dp"
                    android:padding="10dp"
                    android:textAlignment="center"
                    android:textOn="@string/other"
                    android:textOff="@string/other"
                    android:textColor="@drawable/text_organizer_provider"
                    android:textSize="16sp"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
 </FrameLayout>